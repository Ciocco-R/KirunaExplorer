{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://KirunaExplorer.com/schemas/document.json",
    "title": "Schema for a document",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "The unique identifier of the document"
        },
        "title": {
            "type": "string",
            "description": "The title of the document"
        },
        "stakeholder": {
            "type": "string",
            "description": "The stakeholder of the document"
        },
        "scale": {
            "type": "string",
            "description": "The architectural scale of the document"
        },
        "issuance_date": {
            "type": "string",
            "description": "The issuance date of the document",
            "format": "date"
        },
        "type": {
            "type": "string",
            "description": "The type of the document",
            "enum": [
                "Design document",
                "Material effect",
                "Technical document",
                "Prescriptive document",
                "Informative document"
            ]
        },
        "nr_connections": {
            "type": "integer",
            "description": "The number of connections of the document"
        },
        "language": {
            "type": "string",
            "description": "The language of the document"
        },
        "nr_pages": {
            "type": "integer",
            "description": "The number of pages of the document"
        },
        "coordinates": {
            "type": "object",
            "description": "The coordinates of the document",
            "properties": {
                "latitude": {
                    "type": "string",
                    "format": "^[+-]?(90|[0-8]?\\d)°\\s*(\\d{1,2})'\\s*(\\d{1,2}(?:\\.\\d+)?)\"?\\s*[NS]$"
                },
                "longitude": { 
                    "type": "string",
                    "format": "^[+-]?(180|1[0-7]\\d|[0-9]?\\d)°\\s*(\\d{1,2})'\\s*(\\d{1,2}(?:\\.\\d+)?)\"?\\s*[EW]$"
                }
            }
        },
        "area": {
            "type": "string",
            "description": "The area of the document"
        },
        "description": {
            "type": "string",
            "description": "The description of the document",
            "maxLength": 1000
        }
    },
    "required": [
        "id",
        "title",
        "stakeholder",
        "scale",
        "issuance_date",
        "type"
    ],
    "anyOf": [
        {
            "required": [
                "coordinates"
            ]
        },
        {
            "required": [
                "description"
            ]
        }
    ]
}